package patterns;
import java.util.*;
public class Triangle1 {
	public static void main(String[] args)
	{
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter number of rows: ");
		int n = sc.nextInt();
		for(int row=1; row<=n; row++)
		{
			for(int col=0; col<row;col++)
			{
				System.out.print("*");
			}
			System.out.println();
		}
	}

}
