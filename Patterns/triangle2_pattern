package patterns;
import java.util.*;
public class Triangle2 {
	public static void main(String[] args)
	{
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter number of rows: ");
		int n=sc.nextInt();
		for(int row=1; row<=n; row++)
		{
			for(int space=1; space<=n-row; space++)
			{
				System.out.print(" ");
			}
			for(int i=1; i<=row; i++)
			{
				System.out.print("*");
			}
			System.out.println();
		}
	}

}
